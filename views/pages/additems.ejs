<%- include('../template/head')-%>
  <%- include('../template/nav')-%>

    <body class="container-fluid my-5 pt-2 px-3">
      <h1 class="mt-4">Add Item</h1>
      <form class="form" id="sendItem" class="mx-2 px-3">
        <label for="" class="form-label">Item Name</label>
        <input type="text" class="form-control" name="itemName">
        <!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> -->
        <div class="mb-3">
          <label for="" class="form-label">Item Description</label>
          <textarea class="form-control" id="itemDescription" rows="3"></textarea>
        </div>
        <label for="consignorId" class="form-label">Consignor</label>
        <input class="form-control" list="consignorOptions" id="consignorId" placeholder="Type to search...">
        <datalist id="consignorOptions" class="consignorOptions">
          <!-- fill dropdown with consignor fetch -->
        </datalist>
        <label for="auctionId" class="form-label mt-3">Auction</label>
        <input class="form-control" list="auctionOptions" id="auctionId" placeholder="Type to search...">
        <datalist id="auctionOptions">
          <!-- fill dropdown with auction fetch -->
        </datalist>
        <br>
        <input class="mt-3 mb-3" type="submit" value="submit">
        <br>
        <br>
      </form>

      <%- include('../template/footer')-%>
        <script src="/js/script.js" async defer></script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
          crossorigin="anonymous"></script>

    </body>


    </html>